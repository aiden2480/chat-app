{% extends "_base.jinja" %}
{% block title %}Login{% endblock title %}

{% block head %}
    <script>
        function check_params() {
            var login_field = document.getElementsByName("user")[0];
            var username = new URL(location.href).searchParams.get("username");
            if (username) {login_field.value = username;}
        }
    </script>
    <style>
        .center-div {
            width: 85%;
            max-width: 325px;
            height: 85%;
            max-height: 375px;
        }
        .center-div img {
            width: 200px;
            height: 200px;
            float: none;
        }
        .center-div * input {
            text-indent: .5em;
            background-color: #f4efe3;
            border-radius: 5px 0px 5px 0px;
        }
    </style>
{% endblock head %}

{% block body %}
    <div class="center-div">
        <img src="/static/images/sleuth.png" alt="Sleuth icon">
        <div style="width: 100%; height: 5%"></div>
        <form action="/login" method="POST">
            <p>
                Username:
                <input name="user" type="text" placeholder="Username" id="user-input-field" required>
            </p>
            <p>
                Password:
                <input name="pass" type="password" placeholder="Password" id="pass-input-field" required>
            </p>
            <button onclick="window.location.href='/'">Cancel</button>
            <button type="submit">Log in</button>
        </form>
    </div>
    <script>check_params()</script>
{% endblock body %}
